<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RecyclerViewSample" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_300</item>
        <item name="colorPrimaryVariant">@color/gray_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/MyToolbar</item>
    </style>

    <style name="MyToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">@color/black</item>
    </style>

    <!-- Basic styling for the buttons. -->
    <style name="CommitButtons" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/black</item>
        <item name="colorControlHighlight">@color/teal_200</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CommitHash">
        <item name="android:textColor">@color/teal_200</item>
        <item name="android:background">@drawable/commit_hash_border</item>
        <item name="android:textSize">@dimen/commit_hash_text_size</item>
    </style>

    <style name="CommitTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CommitSubMessage">
        <item name="android:textColor">@color/gray_800</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="CommitAuthor">
        <item name="android:textColor">@color/gray_800</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="CommitListItemLayout">
        <item name="android:background">@drawable/list_item_commit_border</item>
    </style>

    <style name="MainFragmentLayout">
        <item name="android:background">@color/white</item>
    </style>
</resources>